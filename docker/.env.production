# RAGFlow 生产环境配置

# 数据库配置
MYSQL_ROOT_PASSWORD=your_secure_mysql_password_here
MYSQL_DATABASE=rag_flow

# MinIO配置
MINIO_PASSWORD=your_secure_minio_password_here

# Redis配置
REDIS_PASSWORD=your_secure_redis_password_here

# Grafana监控配置
GRAFANA_PASSWORD=your_secure_grafana_password_here

# RAGFlow配置
RAGFLOW_LOG_LEVEL=INFO
MAX_WORKERS=4

# SSL证书 (如果使用HTTPS)
SSL_CERT_PATH=/opt/ragflow/ssl/cert.pem
SSL_KEY_PATH=/opt/ragflow/ssl/key.pem

# 域名配置
RAGFLOW_DOMAIN=your-domain.com
RAGFLOW_PROTOCOL=https

# 备份配置
BACKUP_SCHEDULE=0 2 * * *  # 每天2点备份
BACKUP_RETENTION_DAYS=7